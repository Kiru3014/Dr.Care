<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhiteWithOpacity"
    android:orientation="vertical"
    android:padding="10dp">


    <RelativeLayout
        android:id="@+id/mainlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/put_away">

        <Button
            android:id="@+id/viewdetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@color/transparent"
            android:padding="5dp"
            android:paddingTop="@dimen/margin10"
            android:text="VIEW"
            android:textColor="@color/blue"
            android:textSize="16sp" />


        <RelativeLayout
            android:id="@+id/status_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divview"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/margin10"
                android:paddingTop="@dimen/margin10"
                android:text="Referral Status:"
                android:textColor="@color/black_color"
                android:textSize="20sp"
                android:paddingLeft="@dimen/margin10" />

            <TextView
                android:id="@+id/ref_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/txt_status"
                android:paddingStart="10dp"
                android:paddingTop="@dimen/margin10"
                android:textAllCaps="true"
                android:textColor="@color/black_color"
                android:textSize="20sp"
                android:layout_toRightOf="@+id/txt_status"
                android:paddingLeft="10dp" />

            />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/first_inner_R_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/status_layout"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/margin10"
                android:text="Pat.Name"
                android:textColor="@color/textcolor"
                android:textSize="20sp"
                android:textStyle="normal"
                android:paddingLeft="@dimen/margin10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@color/textcolor"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/patname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/margin5"
                android:textColor="@color/textcolor"
                android:textSize="20sp"
                android:paddingLeft="@dimen/margin5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" , Age : "
                android:textColor="@color/colorblack" />

            <TextView
                android:id="@+id/patage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorblack" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/second_inner_R_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/first_inner_R_layout"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/hospital_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/margin10"
                android:text="Hospital Name"
                android:textColor="@color/colorblack"
                android:textSize="15sp"
                android:paddingLeft="@dimen/margin10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=",Referal Date:"
                android:textColor="@color/colorblack" />

            <TextView
                android:id="@+id/ref_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_status"
                android:layout_toEndOf="@+id/lbl_placed_Date"
                android:paddingEnd="@dimen/margin10"
                android:textColor="@color/colorblack"
                android:textSize="15sp"
                android:paddingRight="@dimen/margin10"
                android:layout_toRightOf="@+id/lbl_placed_Date" />
        </LinearLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/second_inner_R_layout"
            android:layout_marginTop="5dp"
            android:background="@color/colorClearfilter" />

        <LinearLayout
            android:id="@+id/forth_inner_R_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view1"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/txt_diag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/margin10"
                android:paddingStart="@dimen/margin10"
                android:paddingTop="@dimen/margin5"
                android:text="Diagnosis"
                android:textColor="@color/colorText"
                android:textSize="15sp"
                android:paddingLeft="@dimen/margin10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@color/colorText"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/diagnosis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="@color/colorText"
                android:textSize="15sp" />

        </LinearLayout>
    </RelativeLayout>


</LinearLayout>
