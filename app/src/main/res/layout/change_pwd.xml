<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/doctor_bgnew"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/colorWhite">

        <TextView
            style="@style/Header"
            android:gravity="center"
            android:text="Change Password"
            android:textSize="16dp"
            android:textColor="@color/colorblack"/>

        <TextView
            android:id="@+id/id_close"
            style="@style/PrimaryText"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:text="Close"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <View style="@style/Divider" />


    <EditText
        android:id="@+id/et_curPwd"
        style="@style/NewAddressEditText"
        android:layout_width="match_parent"
        android:hint="Current Password"
        android:inputType="textPassword"
        android:layout_marginStart="5dp"
        android:textSize="14sp"
        android:textAlignment="viewStart"/>

    <View style="@style/DividerThin"></View>

    <EditText
        android:id="@+id/et_newPwd"
        android:layout_width="match_parent"
        style="@style/NewAddressEditText"
        android:hint="New Password"
        android:inputType="textPassword"
        android:textSize="14sp"
        android:layout_marginStart="5dp"
        android:textAlignment="viewStart"/>

    <View style="@style/DividerThin"></View>

    <EditText
        android:id="@+id/et_confPwd"
        style="@style/NewAddressEditText"
        android:layout_width="match_parent"
        android:hint="Confirm New Password"
        android:inputType="textPassword"
        android:textSize="14sp"
        android:layout_marginStart="5dp"
        android:textAlignment="viewStart"/>

    <View style="@style/DividerThin"></View>

    <Button
        android:id="@+id/btn_savePwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin30"
        android:textColor="@color/colorWhite"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/margin5"
        android:layout_marginEnd="@dimen/margin5"
        android:layout_marginTop="@dimen/margin10"
        android:text="Change Password"
        android:background="@drawable/apply_btn_background" />

</LinearLayout>

