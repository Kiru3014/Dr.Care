<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/lblListItem"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingRight="@dimen/margin15"
        android:paddingTop="5dp"
        android:paddingLeft="@dimen/margin15"
        android:textColor="#000000"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <include layout="@layout/table" />

        <TextView
            android:id="@+id/lblListItemm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin15"
            android:paddingRight="@dimen/margin15"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:gravity="left"
            android:text="Murray score can be calculated through the CESAR trail website (conventional ventilation or ECMO for severe adult respiratory failure) on"
            android:textColor="#000000"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/txtLostpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:autoLink="web"
            android:gravity="center"
            android:textColor="@color/sample_dark_red"
            android:padding="20px"
            android:clickable="true"
            android:linksClickable="true"
            android:text="@string/link_ecmo"
            android:textAppearance="?android:attr/textAppearanceSmall" />



    </LinearLayout>


</LinearLayout>